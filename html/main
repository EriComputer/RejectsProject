          function PathC()
          {
            if ( i == 0 )
            {
              document.getElementById("Q").innerHTML = "You wake up in the morning, you have COSC 236 tonight...";
              document.getElementById("A").innerHTML = "Lets go!";
              document.getElementById("B").innerHTML = "I don't care";
              document.getElementById("C").innerHTML = "Ah *insert bad word here*";
                i++;
              }
              else if ( i == 1 )
              {
                document.getElementById("Q").innerHTML = "What day is it?";
                document.getElementById("A").innerHTML = "Monday";
                document.getElementById("B").innerHTML = "Wednesday";
                document.getElementById("C").innerHTML = "";
                i++;
              }
              else if ( i == 2 )
              {
                document.getElementById("Q").innerHTML = "What day is it?";
                document.getElementById("A").innerHTML = "Monday";
                document.getElementById("B").innerHTML = "Wednesday";
                document.getElementById("C").innerHTML = "Nothing interesting happened by clicking this. Try picking an actual day.";
                i = 1;
              }
              else if ( i == 3 )
              {
                document.getElementById("Q").innerHTML = "When will you arrive?";
                document.getElementById("A").innerHTML = "Early bird gets the worm";
                document.getElementById("B").innerHTML = "I like to arrive fashionably late, ten minutes in!";
                document.getElementById("C").innerHTML = "I'm feeling kinda hungry, maybe an hour in.";
                i++;
